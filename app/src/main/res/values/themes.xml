<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OSA" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/price_red</item>
        <item name="colorOnPrimary">@color/color_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <!-- Customize your theme here. -->
<!--        <item name="windowActionBar">true</item>-->
    </style>
    <style name="AppThemeNoActionBarLogin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/price_red</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary</item>
<!--        <item name="android:windowLightStatusBar">true</item>-->
<!--        <item name="windowActionBar">true</item>-->
    </style>
    <style name="ToolBarStyle" parent="ToolBarStyle.Base" />

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/menuTextSize</item>
    </style>
    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Light">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/golden</item>
        <item name="colorControlActivated">@color/golden</item>
    </style>

    <style name="alertDialogueTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/text_black</item>
        <item name="android:textColorTertiary">@color/text_black</item>
    </style>

<!--    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">-->
