<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_order_notselect" />

        <TextView
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_below="@id/status_img"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/lite_grey"/>

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/status_img"
            android:layout_marginStart="20dp"
            android:text="@string/replacement"
            android:textColor="@color/text_black"
            android:fontFamily="@font/semibold"
            android:layout_alignTop="@id/status_img"
            android:layout_alignBottom="@id/status_img"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

    </RelativeLayout>

</LinearLayout>