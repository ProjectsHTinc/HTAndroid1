<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowLightStatusBar="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_toolbar"
            style="@style/ToolBarStyle.Event"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/gradient_bg"
            android:gravity="center_vertical"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            android:theme="@style/ThemeOverlay.MyApp.ActionBar" />

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/appBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/gradient_bg" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:focusedByDefault="false"
                android:focusableInTouchMode="true"
                android:clickable="true"
                app:queryHint="What are you looking for?"
                app:defaultQueryHint="What are you looking for?"
                app:iconifiedByDefault="false"
                android:background="@drawable/btn_oval_white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/recentMainLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentSearchMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_toolbar"
            android:background="@color/appBackground"
            android:visibility="visible" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_full_header" />

</androidx.drawerlayout.widget.DrawerLayout>