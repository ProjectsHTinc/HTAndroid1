<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShippingAddressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_toolbar"
        style="@style/ToolBarStyle.Event"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/gradient_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:theme="@style/ThemeOverlay.MyApp.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/listLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btnLay"
            android:background="@color/appBackground">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btnLay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:padding="10dp"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnAdd"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_add_colour"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="@string/new_add"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cont"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/btn_size_color"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="@string/signIn"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>


