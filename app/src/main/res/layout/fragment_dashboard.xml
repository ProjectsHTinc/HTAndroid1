<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/background_grey"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_grey"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/re_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top">

                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:minHeight="200dp"
                        android:elevation="10dp"
                        android:layout_alignParentTop="true"
                        android:autoStart="true"
                        android:flipInterval="3000" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:fontFamily="@font/semibold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/see_all_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    app:drawableEndCompat="@drawable/ic_right_arrow" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/best_selling"
                    android:fontFamily="@font/semibold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/see_all_best_selling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    app:drawableEndCompat="@drawable/ic_right_arrow" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView_best_selling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="1dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_arrivals"
                    android:fontFamily="@font/semibold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/see_all_new_arrivals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:fontFamily="@font/bold"
                    android:textSize="12sp"
                    android:layout_alignParentEnd="true"
                    android:drawablePadding="5dp"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"
                    app:drawableEndCompat="@drawable/ic_right_arrow" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listView_new_arrivals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="1dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>