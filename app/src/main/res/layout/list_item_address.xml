<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.9"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!--        <TextView-->
            <!--            android:id="@+id/address_type"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginStart="5dp"-->
            <!--            android:text="@string/address1"-->
            <!--            android:textColor="@color/black" />-->

            <ImageView
                android:id="@+id/sel_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.10" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/shadow_round"
            android:elevation="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cusAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/txt_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cusAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cusAddress1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/txt_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cusAddress2"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/txt_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cusAddress2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/cityName"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/txt_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mobNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pinCode"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular"
                android:text="@string/address1"
                android:textColor="@color/txt_grey"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/mobNum"
                android:background="@color/line_border"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobNum"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.495"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="@string/btnEdit"
                    android:textColor="@color/txt_grey"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="40dp"
                    android:background="@color/line_border"/>


                <TextView
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.495"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:text="@string/btnDelete"
                    android:textAllCaps="true"
                    android:textColor="@color/price_red"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>